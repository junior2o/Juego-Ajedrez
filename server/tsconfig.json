{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",           // Opcional: asegura que la raíz de entrada es src
    "forceConsistentCasingInFileNames": true, // Evita errores por mayúsculas/minúsculas
    "skipLibCheck": true        // Acelera la compilación si no necesitas chequear tipos de dependencias
  },
  "include": ["src/**/*"]
}